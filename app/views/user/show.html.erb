<% provide(:title, @user.username) %>
<!DOCTYPE html>
<html>
    <head>
        <h1>Welcome to sensoriumhealth! </h1>
    </head>
    <body>
        <div class="row">
            <aside class="span4">
                <section>
                    <h1>
                        <!-- Gravatar image.
                        Construct proper Gravatar image URL using user's email address
                        Define gravatar_for helper function to return a Gravatar image
                        for a given user
                        -->
                        <%= gravatar_for @user %>
                        <br>
                        <%= @user.username %>
                    </h1>
                </section>
            </aside>
        </div>
        <p id="notice"><%= notice %></p>

        <p>
            <strong>Username:</strong>
              <%= @user.username %>
        </p>
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <%= link_to 'Edit', edit_user_registration_path %> |
        <%= link_to 'Back', user_path %>
    </body>
</html>
