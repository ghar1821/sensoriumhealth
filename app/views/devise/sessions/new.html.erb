<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, :label => "Username or email", :required => false, :autofocus => true %>
   	<%= f.input :password, :label => "Password", :required => false %>
    <%= f.input :remember_me, :inline_label => 'Remember me', :label => false, :as => :boolean if devise_mapping.rememberable?  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
