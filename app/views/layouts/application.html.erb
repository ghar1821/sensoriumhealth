<!-- This file determine the overall layout of the website.
< Including the header and footer>
< The content is dynamic based on each page>
-->
<!DOCTYPE html>
<html>
    <head>
        <title><%= full_title(yield(:title)) %></title>
        <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        <!-- applicable to HTML 5:>
        < Header tags indicates elements that should go at the top of the page.>
        < Each header tag has 3 css classes - navbar, navbar-fixed-top, navbar-inverse >
        -->
        <Header class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <!-- container has special meaning to bootstrap. yield method inserts the contents of eac page into the site layout -->
                <div class="container">
                    <!-- link_to create links. First argument is the link text, second is the URL -->
                    <%= link_to "BrightHearts", '#', id: "logo" %>
                    <nav>
                        <ul class="nav pull-right">
                            <li><%= link_to "Home", '#' %></li>
                            <li><%= link_to "Help", '#' %></li>
                            <li><%= link_to "About Us", '#' %></li>
                            <li><%= link_to "Sign in", '#' %></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div class="container">
            <%= yield %>
        </div>
    </body>
</html>
