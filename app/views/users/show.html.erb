<% provide(:title, @user.username) %>
<!DOCTYPE html>
<html>
    <head>
        <h1>
            <!-- Gravatar image.
            Construct proper Gravatar image URL using user's email address
            Define gravatar_for helper function to return a Gravatar image
            for a given user
            -->
            <%= gravatar_for @user %>
            <br>
            <%= @user.username %>
        </h1>
    </head>

    <body>

        <p id="notice"><%= notice %></p>

        <p>
            <strong>Firstname:</strong>
              <%= @user.firstname %>
        </p>
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'Back', users_path %>
    </body>
</html>
