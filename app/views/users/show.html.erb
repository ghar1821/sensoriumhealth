<% provide(:title, @user.username) %>
<!DOCTYPE html>
<html>
    <head>
        <h1>Welcome <%= @user.username %>!</h1>
    </head>

    <body>

        <p id="notice"><%= notice %></p>

        <p>
            <strong>Firstname:</strong>
              <%= @user.firstname %>
        </p>
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'Back', users_path %>
    </body>
</html>
